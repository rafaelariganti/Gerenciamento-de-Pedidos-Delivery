<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.delivery.HistoricoController"
      alignment="CENTER" spacing="20.0" padding="30">

    <children>
        <Label text="Histórico de Pedidos Finalizados" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        
        <TextArea fx:id="areaHistorico" prefWidth="400" prefHeight="300" editable="false" wrapText="true" />
        
        <Button text="Atualizar Histórico"/>
    </children>
</VBox>
